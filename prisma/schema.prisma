

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./application.db"
}


model Transactions {
  ID  BigInt @id @default(autoincrement())
  MerchantRequestID String @unique
  CheckoutRequestID String @unique
  ResultCode String
  ResultDesc String
  Amount String
  MpesaReceiptNumber String
  TransactionDate String
  PhoneNumber String
}


model Books {
  ID BigInt  @id @default(autoincrement())
  Title String 
  Description String 
  Author String
  Price String
}

model User {
  ID BigInt @id @default(autoincrement())
  Name String
  Email String @unique
  PhoneNumber String @unique
  Password String
  Orders Order[]
}

model Order {
  ID BigInt @id @default(autoincrement())
  UserEmail String
  UserPhone String 
  Date DateTime @default(now())
  Time DateTime @default(now())
  UserID BigInt
  User User @relation(fields: [UserID], references: [ID])
}

model Admin {
  ID BigInt @id @default(autoincrement())
  Role String @unique
  Email String @unique
  PhoneNumber String @unique
  Password String 
}
